mac_link ()
{
    echo "<%= ErbHelpers.url(ErbHelpers.latest_release_name, 'darwin', 'amd64') %>"
}

linux_link ()
{
    echo "<%= ErbHelpers.url(ErbHelpers.latest_release_name, 'linux', 'amd64') %>"
}

downlink_link ()
{
    curl -o "${1}/<%= ErbHelpers.zip_name %>" "${2}"
}

main ()
{
    DEST_DIR="$HOME/bin"
    [ -n "$1" ] && DEST_DIR="$1"
    mkdir -p $DEST_DIR

    if runningLinux; then
        downlink_link "${DEST_DIR}" "$(linux_link)"
    elif runningOSX; then
        downlink_link "${DEST_DIR}" "$(mac_link)"
    else
        die "Unsupported platform!"
    fi

    cd $DEST_DIR
    unzip <%= ErbHelpers.zip_name %>
    rm <%= ErbHelpers.zip_name %>
    chmod +x "$DEST_DIR/findref"
}

main $@
